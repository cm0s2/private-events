<h1><%= @user.email %></h1>

<h2>Hosted events</h2>

<ul>
  <% @user.events.each do |event| %>
  <li><%= link_to event.name, event %> | <%= link_to "Edit", edit_event_path(event) %> </li>
  <% end %>
</ul>

<h2>Attending upcoming events</h2>

<ul>
  <% @user.attended_events.future.each do |event| %>
  <li><%= link_to event.name, event %></li>
  <% end %>
</ul>

<h2>Attended events</h2>

<ul>
  <% @user.attended_events.past.each do |event| %>
  <li><%= link_to event.name, event %></li>
  <% end %>
</ul>