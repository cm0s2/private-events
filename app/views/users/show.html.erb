<h1><%= @user.email %></h1>

<h2>Hosted events</h2>

<ul>
  <% @user.events.each do |event| %>
  <li><%= event.name %></li>
  <% end %>
</ul>

<h2>Attending upcoming events</h2>

<ul>
  <% @user.attended_events.where('date > ?', DateTime.now).each do |event| %>
  <li><%= event.name %></li>
  <% end %>
</ul>

<h2>Attended events</h2>

<ul>
  <% @user.attended_events.where('date < ?', DateTime.now).each do |event| %>
  <li><%= event.name %></li>
  <% end %>
</ul>